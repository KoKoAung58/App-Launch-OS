// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model WaitlistEntry {
  id                 String   @id @default(cuid())
  fullName           String
  email              String   @unique
  role               String
  building           String
  launchStage        String
  biggestPain        String
  interestedFeatures String   // JSON array stored as string
  launchDate         String?
  timezone           String?
  twitterHandle      String?
  consent            Boolean  @default(false)
  // UTM / referral
  ref                String?
  utmSource          String?
  utmMedium          String?
  utmCampaign        String?
  utmContent         String?
  utmTerm            String?
  // Meta
  ipAddress          String?
  userAgent          String?
  createdAt          DateTime @default(now())

  @@index([email])
  @@index([createdAt])
}
